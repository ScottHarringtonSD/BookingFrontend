@model Booking;
<div class="text-center">
<h1>Booking Details</h1>
</div>

<div class="row gy-5 mt-0">

@{if(Model.Room == "Guest"){
        <div class="col-sm-6">
            <div>
                <img class="responsive rounded mx-auto d-block" src="https://utfs.io/f/4ULawMmyjNB8jQLxmNBpqRCH8deV91OAGZB4NULzT7fhIuPv"/>
            </div>
        </div>
}
else{
    <div class="col-sm-6">
        <div>

                <img class="responsive rounded mx-auto d-block" src="https://utfs.io/f/4ULawMmyjNB8aNciG5MI58s6dKj1NkBwvyPTugD7eiZ2Al4J"/>
        </div>
   
    </div>


}


}
    
        <div class="col-sm-3">

<h4>Client: @Model.Name</h4>
<h4>Room: @Model.Room Room</h4>
<h4>Date: @Model.Date</h4>



@{if(Model.Room == "Guest"){
        <div>
              <span>Overlooking the snowy alps of oxford, the guest room promises breathtaking views of our
                wonderful valley and Henry's socks on the washing line, providing a true winter wonderland experience!
              </span>  
            </div>
}
else{
    <div>
              <span>The front room opens directly onto the beachfront of our property,
                and the wonderful sounds of splashing waves and bin lorries will provide
                a soothing atmosphere to your stay!
              </span>  
        </div>


}
}


<div class="mt-3">
<button type="button" class="btn btn-danger"  data-bs-toggle="modal" data-bs-target="#exampleModal">Delete Booking</button>
</div>



<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Delete Booking</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this booking? This action will be permanent.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" asp-controller="Booking" asp-action="BookingDelete" asp-route-id=@Model.Id>Delete Booking</button>
      </div>
    </div>
  </div>
</div>
                 
</div>
</div>
